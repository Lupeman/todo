<h2>Item ToDo</h2>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.description %></td>
          <td><%= button_to 'Delete', item_path(item), method: 'delete' %></td>
        </tr>
      <% end %>
    </tbody>
</table>
